<h1>New interpretation</h1>

<%= form_for :translation, url: user_translations_path(current_user) do |i| %>
  <p>
    <%= i.label :lang %><br>
    <%= i.select("lang", $langs, selected: lang) %>
  </p>
 
  <p>
    <%= i.label :text %><br>
    <%= i.text_area :text %>
  </p>
 
  <p>
    <%= i.submit "Get interpretation" %>
  </p>
<% end %>